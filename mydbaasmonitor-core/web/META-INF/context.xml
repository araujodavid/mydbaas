<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/mydbaasmonitor">	
	<Resource name="postgres/mydbaasmonitor" auth="Container"
          type="javax.sql.DataSource" driverClassName="org.postgresql.Driver"
          url="jdbc:postgresql://localhost:5432/mycloudmonitor"
          username="postgres" password="root" maxActive="20" maxIdle="10"
		  maxWait="-1"/>
		  
	<Resource name="mysql/mydbaasmonitor" auth="Container"
          type="javax.sql.DataSource" driverClassName="com.mysql.jdbc.Driver"
          url="jdbc:mysql://localhost:3306/mycloudmonitor"
          username="root" password="root" maxActive="20" maxIdle="10"
		  maxWait="-1"/>		  
</Context>
